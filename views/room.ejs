<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Tiho Chat</title>
    <link rel="stylesheet" href="/style.css" />
    <script>
        const ROOM_ID = "<%= roomId %>"
        const CURRENT_USER_NAME = "<%= currentUser.name %>"
    </script>
    <script src="https://unpkg.com/peerjs@1.5.5/dist/peerjs.min.js" defer></script>
    <script src="/socket.io/socket.io.js" defer></script>
    <script src="https://kit.fontawesome.com/9648148fcd.js" crossorigin="anonymous"></script>
    <script src="/script.js" defer></script>
</head>
<body>
<div class="header">
    <div class="logo">
        <div class="header__back">
            <i class="fas fa-angle-left"></i>
        </div>
        <h1>Tiho Chat, <%= currentUser.name %></h1>
    </div>
    <div class="header__options">
        <div id="profile" class="options__button__profile">
<!--            <i class="fa fa-user"></i>-->
            <img id="user-avatar" src="<%= (currentUser.avatar) ? '/' + currentUser.id + '/' + currentUser.avatar : '/default_avatar.jpg' %>" alt="Ваша аватарка" />
        </div>
        <div id="logout" class="options__button">
            <i class="fa fa-sign-out"></i>
        </div>
    </div>
</div>
<div class="main">
    <div class="main__left">
        <div class="videos__group">
            <div id="video-grid">

            </div>
        </div>
        <div class="options">
            <div class="options__left">
                <div id="stopVideo" class="options__button">
                    <i class="fa fa-video-camera"></i>
                </div>
                <div id="muteButton" class="options__button">
                    <i class="fa fa-microphone"></i>
                </div>
                <div id="showChat" class="options__button">
                    <i class="fa fa-comment"></i>
                </div>
            </div>
            <div class="options__right">
                <div id="inviteButton" class="options__button">
                    <i class="fas fa-user-plus"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="main__right">
        <div class="main__chat_window">
            <div class="messages">

            </div>
        </div>
        <div class="main__message_container">
            <input id="chat_message" type="text" autocomplete="off" placeholder="Type message here...">
            <div id="send" class="options__button">
                <i class="fa fa-plus" aria-hidden="true"></i>
            </div>
        </div>
    </div>
</div>
</body>
</html>